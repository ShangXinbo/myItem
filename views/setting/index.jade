extends ../common/layout

block content
    .uk-container.uk-container-center
        include ../common/nav
        article.uk-article
            h3.uk-margin-top 系统设置
            hr.uk-article-divider
            .uk-width-1-3.uk-container-center
                form.uk-form(action="",method="POST", onsubmit="return false")
                    .uk-form-row
                        label.uk-form-label 短信通知中管理员的电话设置：
                        .uk-form-controls
                            input.uk-form-width-large(name="admin_tel" type="text",value="#{setting.admin_tel}")
                    .uk-form-row
                        .uk-button.uk-width-1-1.uk-button-primary(id="set_tel") 修改
    script(src='/js/setting.js')

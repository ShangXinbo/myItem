extends ../common/layout

block content
    .uk-container.uk-container-center

        include ../common/nav
        article.uk-article(data-id="#{user._id}")
            .uk-clearfix
                h2.uk-float-left #{user.name}
                .uk-button.uk-float-right(data-uk-modal="{target:'#add_order'}") 添加新订单
            hr.uk-article-divider.uk-margin
            .uk-overflow-container
                - if(data.length>0){
                table.uk-table.uk-table-striped
                    thead
                        tr
                            th 订单编号
                            th 快递公司
                            th 配送方式
                            th 到库时间
                            th 状态
                    tbody
                        - for(var i=0;i<data.length;i++){
                        tr   //TODO 如果是新订单新样式
                            td #{data[i].code}
                            td #{data[i].text_company}
                            td #{data[i].text_pick_way}
                            td #{data[i].in_time}
                            td #{data[i].text_status}
                        - }
                - }else{
                | 没有数据
                - }
    include layers
    script(src='/js/customer.js')